shader effect_closure
[[
    string as_node_name = "asEffectClosure",
    string as_category = "shader"
]]
(
    color in_color = 0
    [[
        string label = "Final Pixel Color"
    ]],
    output closure color out_color = 0
    [[
        string label = "Lit Output"
    ]]
)
{
    if(raytype("npr"))
    {
        out_color = in_color * as_npr_shading();
    }
    else
    {
        return;
    }
}
